<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2021-05-04T08:24:52Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Kubernetes-Templates</template>
            <name>Kubernetes-Templates</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Kubernetes</name>
                </application>
                <application>
                    <name>Kubernetes ApiServices</name>
                </application>
                <application>
                    <name>Kubernetes Clusters</name>
                </application>
                <application>
                    <name>Kubernetes ComponentStatuses</name>
                </application>
                <application>
                    <name>Kubernetes Containers</name>
                </application>
                <application>
                    <name>Kubernetes Deployments</name>
                </application>
                <application>
                    <name>Kubernetes Nodes</name>
                </application>
                <application>
                    <name>Kubernetes Pods</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>ApiServices</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,apiservices]</key>
                    <delay>50s</delay>
                    <lifetime>1h</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>ApiServices: {#NAME} Status Available</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,apiservices,{#NAME},Available]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes ApiServices</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{count(#5,True,like)}=0</expression>
                                    <name>[{#NAME}] ApiServices is not in Available State</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Clusters</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,clusters]</key>
                    <delay>50s</delay>
                    <status>DISABLED</status>
                    <lifetime>1h</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Cluster {#NAME} API Health Check</name>
                            <type>HTTP_AGENT</type>
                            <key>kubernetes-stats.py[{#NAME},{#APIURL}]</key>
                            <delay>60s</delay>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Clusters</name>
                                </application>
                            </applications>
                            <timeout>5s</timeout>
                            <url>{#APIURL}/healthz</url>
                            <follow_redirects>NO</follow_redirects>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(ok)}=0</expression>
                                    <name>[{#NAME}] Cluster API {#APIURL} is not OK</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>ComponentStatuses</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,componentstatuses]</key>
                    <delay>50s</delay>
                    <lifetime>1h</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>ComponentStatuses: {#NAME} Status Healthy</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,componentstatuses,{#NAME},Healthy]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes ComponentStatuses</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True)}=0</expression>
                                    <name>[{#NAME}] ComponentStatuses is not in Healthy State</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Containers</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,containers,{$POD_FILTER}]</key>
                    <delay>50s</delay>
                    <lifetime>0</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Pod {#NAME} container {#CONTAINER} (ns {#NAMESPACE}) Status Ready</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},containerReady,{#CONTAINER}]</key>
                            <delay>60s</delay>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Containers</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True,#3)}=0 and {nodata(100)}=0</expression>
                                    <name>[{#NAME}] Pod in container {#CONTAINER} (ns {#NAMESPACE}) is not in Ready State</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Pod {#NAME} container {#CONTAINER} (ns {#NAMESPACE}) Restart Count</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},containerRestarts,{#CONTAINER}]</key>
                            <delay>60s</delay>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Containers</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{delta(600)}&gt;10</expression>
                                    <name>[{#NAME}] Pod in container {#CONTAINER} (ns {#NAMESPACE}) restart count &gt; {$CONTAINER_RESTARTS}</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Deployments</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,deployments]</key>
                    <delay>50s</delay>
                    <lifetime>15d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Deployments: {#NAME} (ns {#NAMESPACE}) NOT UPDATED replicas</name>
                            <type>CALCULATED</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,deployments,{#NAMESPACE},{#NAME},notUpdated]</key>
                            <params>last(&quot;k8s.stats[deployments,{#NAMESPACE},{#NAME},Replicas]&quot;)-last(&quot;k8s.stats[deployments,{#NAMESPACE},{#NAME},updatedReplicas]&quot;)</params>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Deployments</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{min(#3)}&gt;0</expression>
                                    <name>[{#NAME}] Deployment (ns {#NAMESPACE}) number of not updated replicas &gt; 0</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Deployments: {#NAME} (ns {#NAMESPACE}) Desired replicas</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,deployments,{#NAMESPACE},{#NAME},Replicas]</key>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Deployments</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>Deployments: {#NAME} (ns {#NAMESPACE}) Status</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,deployments,{#NAMESPACE},{#NAME},statusReady]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Deployments</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True,#3)}=0</expression>
                                    <name>[{#NAME}] Deployment (ns {#NAMESPACE}) is not in Available Status</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Deployments: {#NAME} (ns {#NAMESPACE}) UPDATED replicas</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,deployments,{#NAMESPACE},{#NAME},updatedReplicas]</key>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Deployments</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Nodes</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,nodes]</key>
                    <delay>50s</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>Node: {#NAME} Status: DiskPressure</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,nodes,{#NAME},DiskPressure]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Nodes</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True)}=1</expression>
                                    <name>[{#NAME}] Node DiskPressure</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Node: {#NAME} Status: MemoryPressure</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,nodes,{#NAME},MemoryPressure]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Nodes</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True)}=1</expression>
                                    <name>[{#NAME}] Node MemoryPressure</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Node: {#NAME} Status: OutOfDisk</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,nodes,{#NAME},OutOfDisk]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Nodes</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True)}=1</expression>
                                    <name>[{#NAME}] Node OutOfDisk</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Node: {#NAME} Status: PIDPressure</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,nodes,{#NAME},PIDPressure]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Nodes</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(True)}=1</expression>
                                    <name>[{#NAME}] Node PIDPressure</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Node: {#NAME} Status: Ready</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,nodes,{#NAME},Ready]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Nodes</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{count(5m,True,like)}=0</expression>
                                    <name>[{#NAME}] Node not Ready</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>Pods</name>
                    <type>EXTERNAL</type>
                    <key>kubernetes-stats.py[{$CLUSTER_NAME},discovery,pods,{$POD_FILTER}]</key>
                    <delay>50s</delay>
                    <lifetime>0</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Pod: {#NAME} (ns {#NAMESPACE}) Logs</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},PodLogs]</key>
                            <history>15d</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Pods</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{regexp(error|fail|warn|forbidden)}=1</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) logs problem found</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Pod: {#NAME} (ns {#NAMESPACE}) Phase</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},statusPhase]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Pods</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(CrashLoopBackOff)}=1</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) phase &quot;CrashLoopBackOff&quot;</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{str(Failed)}=1</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) phase &quot;Failed&quot;</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{str(Unknown)}=1</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) phase &quot;Unknown&quot;</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Pod: {#NAME} (ns {#NAMESPACE}) Status</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},statusPod]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Pods</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{count(#5,running,like)}=0</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) is not running</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>Pod: {#NAME} (ns {#NAMESPACE}) Status Ready</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},statusReady]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Pods</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>Pod: {#NAME} (ns {#NAMESPACE}) Status Failed, Reason Evicted</name>
                            <type>EXTERNAL</type>
                            <key>kubernetes-stats.py[{$CLUSTER_NAME},stats,pods,{#NAMESPACE},{#NAME},statusReason]</key>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Kubernetes</name>
                                </application>
                                <application>
                                    <name>Kubernetes Pods</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(Evicted)}=1</expression>
                                    <name>[{#NAME}] Pod (ns {#NAMESPACE}) status Evicted</name>
                                    <priority>AVERAGE</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$CLUSTER_NAME}</macro>
                </macro>
                <macro>
                    <macro>{$CONTAINER_RESTARTS}</macro>
                    <value>10</value>
                </macro>
                <macro>
                    <macro>{$POD_FILTER}</macro>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>
